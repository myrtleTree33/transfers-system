    "version": "0.2.0",
    "configurations": [
        {
            "name": "run backend",
            "request": "launch",
            "cwd": "${workspaceRoot}/backend",
            "runtimeArgs": [
                "run",
                "dev"
            ],
            "runtimeExecutable": "npm",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node"
        },
        {
            "name": "run frontend",
            "request": "launch",
            "cwd": "${workspaceRoot}/frontend",
            "runtimeArgs": [
                "run",
                "dev"
            ],
            "runtimeExecutable": "npm",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node"
        },
    ]
}